
@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";

}
<main class="text-center">


    <h1 class="h4">Toplantı Özeti</h1>
    @if (Model.WillAttend == true)
    {
        <p>Teşekkürler,@Model.Name Toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
    <a href="/meeting/list" class="btn btn-sm btn-outline-primary ">Katılımcıları Listele</a>

    }else{
        <p>@Model.Name, Katılmadığından dolayı Üzgünüz Dostum.</p>
        <a href="/meeting/apply" class="btn btn-sm btn-outline-primary ">Başvuru Formu</a>
    }


</main>
