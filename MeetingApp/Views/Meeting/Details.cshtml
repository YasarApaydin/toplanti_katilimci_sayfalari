@model UserInfo
@{
    ViewBag.Title = "Başvuru Detayı";
}

@{
    var clasCalor = Model.WillAttend == true ? "primary" : "danger";
    var clasName = Model.WillAttend == true ? "Katılıyor" : "Katılmıyor";
}


<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
  <p>
        <span class="badge text-bg-@clasCalor">
            @clasName
        </span>
  </p>  
    <p>İsim: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@clasCalor ">Katılımçı Listesi</a>

</main>